<scene version='2.0.0'>
    <integrator type='direct'>
        <integer name="emitter_samples" value="4"/>
        <integer name="bsdf_samples" value="0"/>
    </integrator>

    <sensor type="perspective">
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="1000"/>

        <transform name="to_world">
            <lookat target="0.0, 0.0, 2.0"
                    origin="0.0, -15.0, 0.0"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>

        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width" value="1024"/>
            <integer name="height" value="768"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="8"/>
        </sampler>
    </sensor>

     <shape type="sphere">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.9 0.9 0.0"/>
        </bsdf>
    </shape>

    <emitter type="point">
        <point name="position" x="2" y="-6.0" z="4.5"/>
        <spectrum name="intensity" value="50"/>
    </emitter>

    <emitter type="constant">
        <spectrum name="radiance" value="0.1"/>
    </emitter>
</scene>
